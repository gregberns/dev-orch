# Node.js Developer Environment Configuration
# Copy this file to .env and modify as needed

# Git configuration
GIT_NAME="Node.js Developer"
GIT_EMAIL="developer@example.com"

# SSH configuration
SSH_PUBLIC_KEY="ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC..."

# VM configuration
VM_NAME="nodejs-template"
VM_CPUS=2
VM_MEMORY=4G
VM_DISK=20G

# Node.js specific configuration
NODE_VERSION="20.x"
NPM_PREFIX="/home/ubuntu/.npm-global"

# Optional: Additional variables for future use
# WORKSPACE_DIR="/home/ubuntu/workspace"
# CONTAINER_RUNTIME="podman"
